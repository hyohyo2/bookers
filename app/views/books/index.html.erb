<h1 class="title_index">Books</h1>

<table>
 <thead>
 <tr>
   <th class="table_head">Title</th>
   <th class="table_head">Body</th>
   <th class="table_head"></th>
 </tr>
 </thead>

<tbody>
 <% @books.each do |book|%>
 <tr>
   <td class="table_item"><%= book.title %></td>
   <td class="table_item"><%= book.body %></td>


   <td class="table_item"><%= link_to "Show", book_path(book.id) %></td>

   <td class="table_item"><%= link_to "Edit", edit_book_path(book.id) %></td>

   <td class="table_item"><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>

 </tr>
 <% end %>
 </tbody>

</table>

<h2 class="title_new">New book</h2>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<div class="field">
 <p>Title</p>
 <%= f.text_field :title %>
 </div>
 <div class="field">
 <p>Body</p>
 <%= f.text_area :body %>
 </div>
 
 <div class="actions">
 <%= f.submit 'Check Book' %>
 </div>
<% end %>

